---
import Layout from '~/layouts/ContentPageLayout.astro';
import type { MetaData } from '~/types';

export interface Props {
  frontmatter: {
    title?: string;
    // Add other frontmatter fields if necessary
  };
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
  title: frontmatter?.title || '', // Provide a fallback title
  // Populate other metadata fields as needed
};
---
<Layout metadata={metadata} showHero={false}>
  <slot />
</Layout>