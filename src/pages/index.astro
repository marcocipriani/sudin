---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';

import strings from '~/strings.json';

const metadata = {
  title: 'Sudin',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={}
    image={{ src: '~/assets/images/hero-image.jpg', alt: 'Sudin Hero Image' }}
  >
    <Fragment slot="title">
      <!-- {strings.siteMotto} -->
      Building a new <span class="text-accent dark:text-white highlight">Sudan</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">{strings.companyName}</span>
    </Fragment>
  </Hero>

</Layout>
